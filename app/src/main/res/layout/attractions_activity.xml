<?xml version="1.0" encoding="utf-8"?>
<android.support.v4.widget.DrawerLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/drawer_layout"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    tools:context=".attractions.AttractionsActivity"
    tools:openDrawer="start">

    <LinearLayout
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:orientation="vertical">

        <android.support.design.widget.AppBarLayout
            android:layout_width="match_parent"
            android:layout_height="wrap_content">

            <android.support.v7.widget.Toolbar
                android:id="@+id/toolbar"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:background="?attr/colorPrimary"
                android:minHeight="?attr/actionBarSize"
                android:theme="@style/Toolbar"
                app:popupTheme="@style/ThemeOverlay.AppCompat.Light" />
        </android.support.design.widget.AppBarLayout>

        <android.support.design.widget.CoordinatorLayout
            android:id="@+id/coordinatorLayout"
            android:layout_width="match_parent"
            android:layout_height="match_parent">

            <FrameLayout
                android:id="@+id/attr_content_frame"
                android:layout_width="match_parent"
                android:layout_height="wrap_content" />

            <fragment xmlns:android="http://schemas.android.com/apk/res/android"
                xmlns:map="http://schemas.android.com/apk/res-auto"
                android:id="@+id/attr_map"
                android:name="com.google.android.gms.maps.SupportMapFragment"
                android:layout_width="match_parent"
                android:layout_height="375dp"
                android:layout_gravity="bottom"
                map:mapType="normal"
                map:uiCompass="false"
                map:uiRotateGestures="true"
                map:uiScrollGestures="true"
                map:uiTiltGestures="true"
                map:uiZoomControls="false"
                map:uiZoomGestures="true" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/attr_fab_hotels"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="80dp"
                android:background="@color/common_google_signin_btn_text_light_default"
                android:clickable="true"
                android:src="@drawable/hotel1"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:layout_anchor="@+id/attr_map"
                app:layout_anchorGravity="bottom" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/attr_fab_flights"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="140dp"
                android:clickable="true"
                android:src="@drawable/flight1"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:layout_anchor="@+id/attr_map"
                app:layout_anchorGravity="bottom"
                app:srcCompat="@android:drawable/toast_frame" />

            <android.support.design.widget.FloatingActionButton
                android:id="@+id/attr_fab_car_rentals"
                android:layout_width="match_parent"
                android:layout_height="wrap_content"
                android:layout_marginBottom="26dp"
                android:layout_marginLeft="200dp"
                android:clickable="true"
                android:src="@drawable/car1"
                app:backgroundTint="@android:color/white"
                app:fabSize="mini"
                app:layout_anchor="@+id/attr_map"
                app:layout_anchorGravity="bottom"
                app:srcCompat="@android:drawable/toast_frame" />

        </android.support.design.widget.CoordinatorLayout>

    </LinearLayout>

    <!-- Navigation Drawer -->
    <android.support.design.widget.NavigationView
        android:id="@+id/nav_view"
        android:layout_width="wrap_content"
        android:layout_height="match_parent"
        android:layout_gravity="start"
        android:fitsSystemWindows="true"
        app:headerLayout="@layout/nav_header"
        app:menu="@menu/drawer_actions" />

</android.support.v4.widget.DrawerLayout>